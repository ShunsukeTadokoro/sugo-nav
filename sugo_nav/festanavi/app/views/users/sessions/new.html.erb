<div class="row">
	<div class="col-sm-8 col-sm-offset-2">
		<%= form_for(resource, as: resource_name, url: session_path(resource_name), :html => {:class => "form-horizontal well"}) do |f| %>
			<fieldset>
				<legend>SNSでログイン</legend>
				<div class="form-group">
					<div class="col-lg-10 text-center mb20">
						<% if devise_mapping.omniauthable? %>
						<% resource_class.omniauth_providers.each do |provider| %>
							<%= link_to "#{provider.to_s.titleize}でログイン", omniauth_authorize_path(resource_name, provider), class: "btn ml10 mr10 btn-#{provider.to_s.titleize.downcase}" %>
						<% end %>
					</div>
				<% end -%>
				</div>
				<legend>メールアドレスでログイン</legend>
				<div class="form-group">
					<%= f.label :email, class: 'col-lg-2 control-label' %>
					<div class="col-lg-10"><%= f.email_field :email, autofocus: true, class: 'form-control' %></div>
				</div>
				<div class="form-group">
					<%= f.label :password, class: 'col-lg-2 control-label' %>
					<div class="col-lg-10 mb10">
						<%= f.password_field :password, autocomplete: "off", class: 'form-control' %>
						<% if devise_mapping.rememberable? -%>
							<div class="checkbox">
								<label><%= f.check_box :remember_me %>保存する</label><br>
							</div>
						<% end -%>
					</div>
					<div class="col-lg-10">
						<% if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
							<%= link_to "パスワードを忘れた場合はこちら", new_password_path(resource_name) %><br>
						<% end %>
						<% if devise_mapping.registerable? && controller_name != 'registrations' %>
							<%= link_to "新規登録はこちら", new_registration_path(resource_name) %><br />
						<% end %>
					</div>
				</div>
				<div class="text-right"><%= f.submit "ログイン", class: 'btn btn-success' %></div>
			</fieldset>
		<% end %>
	</div>
</div>

<%= render "users/shared/links" %>
